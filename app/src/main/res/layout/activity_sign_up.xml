<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8D2EC"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/textSignup"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:text="회원가입"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="225dp"
        android:layout_height="156dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textSignup"
        app:srcCompat="@drawable/networking" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="396dp"
        android:layout_height="168dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <EditText
            android:id="@+id/editId"

            android:layout_width="388dp"
            android:layout_height="54dp"
            android:layout_marginStart="8dp"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="#FCFCFC"
            android:ems="10"
            android:hint="이메일 입력"
            android:inputType="textPersonName"
            android:singleLine="true"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editPass"
            android:layout_width="388dp"
            android:layout_height="57dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="#FCFCFC"

            android:ems="10"
            android:hint="비밀번호 입력"
            android:inputType="textPassword"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editPassTest"
            android:layout_width="388dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="252dp"
            android:background="#FCFCFC"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPassword"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="236dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/editName"
            android:layout_width="388dp"
            android:layout_height="54dp"
            android:background="#FCFCFC"
            android:backgroundTint="#FCFCFC"
            android:ems="10"
            android:foregroundTint="#FCFCFC"
            android:hint="이름 입력"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FCFCFC"
                android:text="남자" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FCFCFC"
                android:text="여자" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#FCFCFC"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textBirth"
                android:layout_width="8dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="생년월일"

                android:textColor="#A8A8A8"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editBirthNo"
                android:layout_width="228dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:hint="생년월일을 6자리로 입력하세요"
                android:inputType="numberPassword" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="388dp"
            android:layout_height="58dp"
            android:background="#3247BE"
            android:text="회원가입"
            android:textColor="#FCFCFC"
            android:textSize="18sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>